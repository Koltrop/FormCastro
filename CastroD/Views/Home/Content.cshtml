@model IEnumerable<CastroD.Models.Employee>
@{
    ViewData["Title"] = "Content";
}

<div class="row align-items-center justify-content-between" style="padding-bottom: 2%;">
    <div class="d-inline-flex">
        <h3>Content</h3>
    </div>
    
    <div class="d-inline-flex">
        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Форм</a>
    </div>
    
</div>





<div class="container">
    @if (Model.Count() > 0)
    {


        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.Name)</td>
                    <td>@Html.DisplayNameFor(m => m.Birthday)</td>
                    <td>@Html.DisplayNameFor(m => m.Phone)</td>
                    <td>@Html.DisplayNameFor(m => m.Inn)</td>
                    <td>@Html.DisplayNameFor(m => m.Email)</td>
                    <td>@Html.DisplayNameFor(m => m.Place)</td>
                    <td>@Html.DisplayNameFor(m => m.Date)</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Birthday</td>
                        <td>@item.Phone</td>
                        <td>@item.Inn</td>
                        <td>@item.Email</td>
                        <td>@item.Place</td>
                        <td>@item.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Нет Данных
        </div>
    }
</div>

